---
import type { Project } from "@/utils/projects"
import GitHub from "@icons/GitHub.astro"
import World from "@icons/World.astro"

const { project } = Astro.props as { project: Project }
---
<article class="border border-neutral-700/20 shadow hover:bg-gray-300/30 dark:hover:bg-neutral-700/20 p-4 rounded flex flex-col">
	<div class="flex-1">
		<h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{project.title}</h3>
		<p class="text-base font-normal text-gray-500 dark:text-gray-300">{project.description}</p>
		<div class="flex items-center flex-wrap gap-2 mt-2">
			{project.tags.map(tag => (
				<span class="px-1.5 py-0.5 text-xs font-light flex gap-x-1 text-gray-900 dark:text-gray-100">
					<tag.icon class="size-4 text-black dark:text-gray-50" /> {tag.name}
				</span>
			))}
		</div>
	</div>
	<figure class="my-4">
		<img src={project.image} alt={project.title} class="w-full h-48 object-cover object-left-top rounded-lg" />
	</figure>
	<div class="flex items-center gap-x-4">
		{project.github && (
			<a href={project.github} target="_blank" rel="noopener noreferrer" class="flex flex-1 justify-center items-center gap-x-2 py-0.5 px-2 border text-gray-800 hover:text-black border-gray-600 hover:border-gray-950 dark:text-gray-300 dark:hover:text-gray-50 dark:border-gray-500 rounded-full dark:hover:border-gray-400">
				<GitHub class="size-4" />
				<span>Ver CÃ³digo</span>
			</a>
		)}
		{project.url && (
			<a href={project.url} target="_blank" rel="noopener noreferrer" class="flex flex-1 justify-center items-center gap-x-2 py-0.5 px-2 border text-gray-800 hover:text-black border-gray-600 hover:border-gray-950 dark:text-gray-300 dark:hover:text-gray-50 dark:border-gray-500 rounded-full dark:hover:border-gray-400">
				<World class="size-4 text-black dark:text-gray-50" />
				<span>Ver Proyecto</span>
			</a>
		)}
	</div>
</article>