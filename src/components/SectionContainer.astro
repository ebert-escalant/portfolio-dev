---
const { title, id } = Astro.props
---
<section id={id} class="bg-gray-200/60 dark:bg-white/5 scroll-m-20 p-4 rounded shadow-lg my-4">
	{title && (
		<div class="flex items-center gap-x-4 mb-6">
			<slot name="icon" />
			<h2 class="text-2xl font-bold text-center">
				{title}
			</h2>
		</div>
	)}
	<slot />
</section>