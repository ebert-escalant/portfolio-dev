---
import { experience } from "@/utils/experience"
---
<ol class="relative border-s border-gray-500">
	{experience.map(item => (
		<li class="mb-10 ms-4">
			<div class="absolute w-3 h-3 bg-gray-500 rounded-full mt-1.5 -start-[6.5px]"></div>
			<time class="mb-1 text-sm font-normal leading-none dark:text-gray-400">{item.date}</time>
			<h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{item.title}</h3>
			<h3 class="font-medium text-gray-900 dark:text-white">{item.company}</h3>
			<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-300">{item.description}</p>
			<ul class="list-disc ms-6">
				{item.tasks.map(task => (
					<li class="mb-2 text-base font-normal text-gray-500 dark:text-gray-300">
						{task}
					</li>
				))}
			</ul>
		</li>
	))}
</ol>