---
import { education } from "@/utils/education"
---
<ol class="relative border-s border-gray-200 dark:border-gray-500">
	{education.map(item => (
		<li class="mb-10 ms-4">
			<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-[6.5px] dark:bg-gray-500"></div>
			<time class="mb-1 text-sm font-normal leading-none dark:text-gray-400">{item.date}</time>
			<h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{item.profession}</h3>
			<h3 class="font-light text-gray-900 dark:text-white">{item.institution}</h3>
		</li>
	))}
</ol>